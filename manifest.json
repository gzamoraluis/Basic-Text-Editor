{
  "name": "Simple Text Editor",
  "short_name": "TextEditor",
  "description": "A simple text editor with GitHub integration",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3498db",
  "icons": [
    {
      "src": "icons/Text-editor192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icons/Text-editor512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "icons/Text-editor512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/*": [".txt", ".md", ".html", ".json", ".csv"]
      }
    }
  ]
}
